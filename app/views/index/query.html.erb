<html>
	<div><h1 class=doodle>CourseCompare.Com</h1></div>	
	<div class=query> 
		<%= form_for :results, url: results_path do |f| %>
			<%= f.label :home, "Home University" %>
			<%= f.select :home, @schools %><br/>
			<%= f.label :host, "Host University" %>
			<%= f.select :host, @schools %><br/>
			<%= f.label :dept, "Department" %>
			<%= f.text_field :dept %>	<br/>
			<%= f.submit "Submit" %>
		<% end %>
	</div> 
	<div class=footer> Created by <a href="http://github.com/ravshansk">@ravshansk</a> </div>
</html>

